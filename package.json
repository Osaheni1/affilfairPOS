{
  "name": "affilfair-POS",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "nodemon --watch . --ext js,html,css --exec electron .",
    "tailwind": "npx @tailwindcss/cli -i ./src/input.css -o ./src/output.css --watch",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.ec.affilfair",
    "productName": "AffilfairPOS",
    "files": [
      "**/*",
      "!**/*.ts",
      "assets/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "repository": "https://github.com/Osaheni1/affilfairPOS",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.11"
  }
}
